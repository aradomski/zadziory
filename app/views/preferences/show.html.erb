<% title "Show preference" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name">Animal</span>
    <span class="value"><%= @preference.animal %></span>
  </div>
  <div class="attribute">
    <span class="name">Smoking</span>
    <span class="value"><%= @preference.smoking %></span>
  </div>
  <div class="attribute">
    <span class="name">Relationship</span>
    <span class="value"><%= @preference.relationship %></span>
  </div>
  <div class="link">
    <%= link_to 'Edit', edit_preference_path(@preference), class: "btn primary" %>
    <%= link_to 'Back', preferences_path, class: "btn primary" %>
  </div>
</article>
