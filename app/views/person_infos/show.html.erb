<% title "Show person_info" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name">Name</span>
    <span class="value"><%= @person_info.name %></span>
  </div>
  <div class="attribute">
    <span class="name">Surname</span>
    <span class="value"><%= @person_info.surname %></span>
  </div>
  <div class="attribute">
    <span class="name">Nick</span>
    <span class="value"><%= @person_info.nick %></span>
  </div>
  <div class="attribute">
    <span class="name">Sex</span>
    <span class="value"><%= @person_info.sex %></span>
  </div>
  <div class="attribute">
    <span class="name">Isuser</span>
    <span class="value"><%= @person_info.isUser %></span>
  </div>
  <div class="link">
    <%= link_to 'Edit', edit_person_info_path(@person_info), class: "btn primary" %>
    <%= link_to 'Back', person_infos_path, class: "btn primary" %>
  </div>
</article>
