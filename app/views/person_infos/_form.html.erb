<%= semantic_form_for @person_info do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :nick %>
    <%= f.input :sex, :as => :radio, :collection => ["Male", "Female"]%>
    <%= f.input :isUser, :label => "isUser" %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
