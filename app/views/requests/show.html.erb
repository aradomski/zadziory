<% title t('requests.show.title') %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name"><%= t('requests.show.user') %></span>
    <span class="value">    <%= link_to get_user_username(@request.user_id), user_path(@request.user_id)%></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.place') %></span>
    <span class="value"><%= link_to @request.place_id.to_s, place_path(@request.place_id) %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.status') %></span>
    <span class="value"><%= get_status(@request.status) %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.start') %></span>
    <span class="value"><%= @request.date_start %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.end') %></span>
    <span class="value"><%= @request.date_end %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.people') %></span>
    <span class="value"><%= @request.number_of_people %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.people_type') %>/span>
    <span class="value"><%= @request.people_type %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t('requests.show.message') %></span>
    <span class="value"><%= @request.message %></span>
  </div>
  <div class="link">
    <%= link_to 'Edit', edit_request_path(@request), class: "btn primary" %>
    <%= link_to 'Back', requests_path, class: "btn primary" %>
  </div>
</article>
