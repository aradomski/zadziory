<div id="form">
<%= semantic_form_for @place, :html => { :multipart => true} do |f| %>
  <%= f.inputs do %>

    <%= f.input :availability_from, :as => :string , :input_html => { :class => "date_stealer", :size => 30 } %>
    <%= f.input :availability_to, :as => :string , :input_html => { :class => "date_stealer", :size => 30 } %>
    <%= f.input :price_min, :input_html => { :size => 5 } %>
    <%= f.input :price_max, :input_html => { :size => 5 }%>
    <%= f.input :deposit, :input_html => { :size => 5 } %>
    <%= f.input :grade , :input_html => { :size => 5 }%>
    <%= f.input :telephone, :input_html => { :size => 30 } %>
    <%= f.input :country, :priority_countries => [:pl, :gb, :de]%>
	<%= f.input :region,:as => :select, :collection => REGIONS_PL.sort %>
    <%= f.input :city, :input_html => { :size => 30 } %>
    <%= f.input :district, :input_html => { :size => 30 } %>
    <%= f.input :street, :input_html => { :size => 30 } %>
    <%= f.input :place_nr, :input_html => { :size => 3 }  %>
    <%= f.input :flat_nr, :input_html => { :size => 3 } %>
    <%= f.input :coordinates %>
    <%= f.input :place_type,:as => :select, :collection => PLACE_TYPE.sort %>
    <%= f.input :floor_nr, :input_html => { :size => 3 } %>
    <%= f.input :nr_of_floors, :input_html => { :size => 3 } %>
    <%= f.input :nr_of_rooms, :input_html => { :size => 3 } %>
    <%= f.input :surface, :input_html => { :size => 3 } %>
    <%= f.input :build_year, :input_html => { :size => 3 } %>
    <%= f.input :heating_type, :input_html => { :size => 30 } %>
    <%= f.input :people_max,  :input_html => { :size => 3 } %>
    <%= f.input :for_who, :input_html => { :size => 30 } %>
    <%= f.input :min_length_lease,  :input_html => { :size => 30 } %>
    <%= f.input :type_length_lease, :input_html => { :size => 30 } %>
    <%= f.input :description %>
    <%= f.input :has_balcony %>
    <%= f.input :has_garage %>
    <%= f.input :has_basement %>
    <%= f.input :has_parking %>
    <%= f.input :has_internet %>
    <%= f.input :has_terrace %>
    <%= f.input :has_lift %>
    <%= f.input :has_garden %>
	<%= f.input :is_active %>
        <%= f.inputs :for => :images do |i| %>
              <% unless @place.images.empty? %>
               <%= image_tag(@place.images["#%i".to_i].image_url(:thumb).to_s) %>
                  <% unless i.object.new_record? %>
                    <%= i.input :remove_image, :as => :boolean %>
                   <% end %>
            <% end %>


            <%= i.input :image, :as => :file %>
            <%= i.input :image_cache, :as => :hidden %>


        <% end %>
  <% end %>
  
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
</div>
