<% title "All places" %>

<% @places.each do |place| %>
<article class="index">
  <div class="attribute">
    <span class="name">Is active</span>
    <span class="value"><%= place.is_active %></span>
  </div>
    <div class="attribute">
    <span class="name">Owner</span>
    <span class="value"><%= place.owner %></span>
  </div>
    <div class="attribute">
    <span class="name">Availability from</span>
    <span class="value"><%= place.availability_from %></span>
  </div>
    <div class="attribute">
    <span class="name">Availability to</span>
    <span class="value"><%= place.availability_to %></span>
  </div>
    <div class="attribute">
    <span class="name">Price min</span>
    <span class="value"><%= place.price_min %></span>
  </div>
    <div class="attribute">
    <span class="name">Price max</span>
    <span class="value"><%= place.price_max %></span>
  </div>
    <div class="attribute">
    <span class="name">Deposit</span>
    <span class="value"><%= place.deposit %></span>
  </div>
    <div class="attribute">
    <span class="name">Grade</span>
    <span class="value"><%= place.grade %></span>
  </div>


    <div class="attribute">
    <span class="name">County</span>
    <span class="value"><%= place.county %></span>
  </div>
    <div class="attribute">
    <span class="name">City</span>
    <span class="value"><%= place.city %></span>
  </div>



    <div class="attribute">
    <span class="name">Place type</span>
    <span class="value"><%= place.place_type %></span>
  </div>
    <div class="attribute">
    <span class="name">For who</span>
    <span class="value"><%= place.for_who %></span>
  </div>
    <div class="links">
    <%= link_to 'Show', place, class: "btn" %>
    <%= link_to 'Edit', edit_place_path(place), class: "btn" %>
    <%= link_to 'Destroy', place, confirm: 'Are you sure?',
          method: :delete, class: "btn danger" %>
  </div>
</article>
<% end %>
<% if can? :create, Place %>
<div class="link">
  <%= link_to 'New Place', new_place_path, class: "btn primary" %>
</div>
<% end %>
