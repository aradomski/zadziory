<%= semantic_form_for @search , :remote => true do |f| %>
	<%= f.inputs do %>

    <%= f.input :city_contains, :label => t('place.search.city') , :input_html => { :size => 20 } %>
	<%= f.input :district_contains, :label => t('place.search.district') , :input_html => { :size => 20 } %>
	<%= f.input :price_min_gte, :label => t('place.search.price_min'), :input_html => { :size => 5 } %>
	<%= f.input :price_min_lte, :label => t('place.search.price_max'), :input_html => { :size => 5 } %>
	
	<%= f.input :grade_gte, :label => t('place.search.grade_min'), :input_html => { :size => 5 } %>
	<%= f.input :grade_lte, :label => t('place.search.grade_max'), :input_html => { :size => 5 } %>
	
	<%= f.input :place_type_contains,:label => t('place.search.type'), :as => :select, :collection => PLACE_TYPE.sort %>
	
	<!--	Nie dziaÅ‚a ? --> <!--
	<%= f.input :country_equals, :priority_countries => [:pl, :gb, :de]%>
	<%= f.input :region_equals,:as => :select, :collection => REGIONS_PL.sort %>
	-->
	<% end %>
	
	<div class="knob">
	<%= f.buttons do %>
		<%= f.commit_button :label => t('place.search.search') %>
	<% end %>
	</div>
<% end %>
