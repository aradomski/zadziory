<%= semantic_form_for @search , :remote => true do |f| %>
	<%= f.inputs do %>

    <%= f.input :city_contains, :label => "MCity" , :input_html => { :size => 20 } %>
	<%= f.input :district_contains, :label => "District" , :input_html => { :size => 20 } %>
	<%= f.input :price_min_gte, :label => "Price min", :input_html => { :size => 5 } %>
	<%= f.input :price_min_lte, :label => "Price max", :input_html => { :size => 5 } %>
	
	<%= f.input :grade_gte, :label => "Grade min", :input_html => { :size => 5 } %>
	<%= f.input :grade_lte, :label => "Grade max", :input_html => { :size => 5 } %>
	
	<%= f.input :place_type_contains,:label => "Type", :as => :select, :collection => PLACE_TYPE.sort %>
	
