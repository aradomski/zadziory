	<%= f.input :region_equals,:as => :select, :collection => REGIONS_PL.sort %>
	-->
	<% end %>
	
	<div class="knob">
	<%= f.buttons do %>
		<%= f.commit_button :label => "Search" %>
	<% end %>
	</div>
