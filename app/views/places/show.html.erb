<% title "Show place" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>


  <% unless @place.images.empty?  %>
  
  <div id="gal" class="imageflow">
  
        <% for image in @place.images %>
            
            <%= image_tag image.image_url.to_s, :longdesc => image.image_url.to_s %>
            
       <% end %>

      </div>
  <% end %>
  <div class="show">
