    <span class="value"><%= @place.is_active %></span>
  </div>
  <div class="attribute">
    <span class="name">Owner</span>
    <span class="value"><%= @place.owner %></span>
  </div>
  <div class="attribute">
    <span class="name">Price min</span>
    <span class="value"><%= @place.price_min %></span>
  </div>
  <div class="attribute">
    <span class="name">Price max</span>
    <span class="value"><%= @place.price_max %></span>
  </div>
  <div class="attribute">
    <span class="name">Deposit</span>
    <span class="value"><%= @place.deposit %></span>
  </div>
  <div class="attribute">
    <span class="name">Grade</span>
    <span class="value"><%= @place.grade %></span>
  </div>
  <div class="attribute">
    <span class="name">Telephone</span>
    <span class="value"><%= @place.telephone %></span>
  </div>
  <div class="attribute">
    <span class="name">Country</span>
    <span class="value"><%= @place.country %></span>
  </div>
  <div class="attribute">
    <span class="name">Region</span>
    <span class="value"><%= @place.region %></span>
  </div>
  <div class="attribute">
    <span class="name">City</span>
    <span class="value"><%= @place.city %></span>
