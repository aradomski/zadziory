    <span class="name">People max</span>
    <span class="value"><%= @place.people_max %></span>
  </div>
  <div class="attribute">
    <span class="name">For who</span>
    <span class="value"><%= @place.for_who %></span>
  </div>
  <div class="attribute">
    <span class="name">Min length lease</span>
    <span class="value"><%= @place.min_length_lease %></span>
  </div>
