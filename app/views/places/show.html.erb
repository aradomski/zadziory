    <span class="value"><%= @place.street %></span>
  </div>
  <div class="attribute">
    <span class="name">Place nr</span>
    <span class="value"><%= @place.place_nr %></span>
  </div>
  <div class="attribute">
    <span class="name">Flat nr</span>
    <span class="value"><%= @place.flat_nr %></span>
  </div>
  <div class="attribute">
    <span class="name">Coordinates</span>
    <span class="value"><%= @place.coordinates %></span>
  </div>
  <div class="attribute">
    <span class="name">Place type</span>
    <span class="value"><%= @place.place_type %></span>
  </div>
  <div class="attribute">
    <span class="name">Floor nr</span>
    <span class="value"><%= @place.floor_nr %></span>
  </div>
  <div class="attribute">
    <span class="name">Nr of floors</span>
    <span class="value"><%= @place.nr_of_floors %></span>
  </div>
  <div class="attribute">
    <span class="name">Nr of rooms</span>
    <span class="value"><%= @place.nr_of_rooms %></span>
  </div>
  <div class="attribute">
    <span class="name">Surface</span>
    <span class="value"><%= @place.surface %></span>
  </div>
  <div class="attribute">
    <span class="name">Build year</span>
    <span class="value"><%= @place.build_year %></span>
  </div>
  <div class="attribute">
