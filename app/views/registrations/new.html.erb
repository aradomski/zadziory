<% title "Register" %>
<div id="register">
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<%= f.inputs do %>
	
	<%= f.input :email, :as => :email, :input_html => { :size => 30 } %>

<% if @user.password_required? %>
	<%= f.input :password, :as => :password, :input_html => { :size => 30 } %>

	<%= f.input :password_confirmation, :as => :password , :input_html => { :size => 30 } %>
<% end %>	
	<div class="radio_roles">
		<%= render :partial => "devise/shared/roles"%>
	</div>

	<%end%>
	
	<span class="rr">
	<fieldset class="knob">
	<%= f.buttons do %>
		<%= f.commit_button :label => "Register" %>
	<% end %>
	</fieldset>
	</span>
	
<% end %>

<div class="shared_links">
	<%= render :partial => "devise/shared/links" %>
</div>

</div>
